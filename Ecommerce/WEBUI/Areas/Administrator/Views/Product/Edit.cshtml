@model Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewBag.Title</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Back to list", "Index", new { @class = "btn btn-primary" })
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">@ViewBag.Title</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Product Name</label>
                                @Html.ValidationMessageFor(x => x.ProductName)
                                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "enter product name" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Unit Price</label>
                                @Html.ValidationMessageFor(x => x.UnitPrice);
                                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", placeholder = "enter unit price", type = "number" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Units In Stock</label>
                                @Html.ValidationMessageFor(x => x.UnitsInStock)
                                @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", placeholder = "enter unit in stock", type = "number" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Cover Image</label>
                                @Html.ValidationMessageFor(x => x.ImagePath)
                                <input type="file" class="form-control" name="ImagePath" />
                            </div>
                        </div>
                        <!-- /.card-body -->


                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>





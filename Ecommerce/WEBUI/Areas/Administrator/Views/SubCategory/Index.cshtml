@model List<SubCategory>
@{
    ViewBag.Title = "SubCategory";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewBag.Title</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("New SubCategory", "Create", null, new { @class = "btn btn-primary" })
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th>SubCategory Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>
                                    <a href="#">@category.SubCategoryName</a>
                                </td>
                                <td>
                                    @if (category.Description != null)
                                    {
                                        @category.Description
                                    }
                                    else
                                    {
                                        <span>None</span>

                                    }
                                </td>
                                @switch (category.Status)
                                {
                                    case CORE.Enum.Status.Active:
                                        <td><span>Active</span></td>
                                        break;
                                    case CORE.Enum.Status.Deleted:
                                        <td><span>Deleted</span></td>
                                        break;
                                    case CORE.Enum.Status.Modified:
                                        <td><span>(Modified)</span></td>
                                        break;
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-lg-8">
                <h3>Products</h3>
            </div>
        </div>
    </div>
</section>

